<?xml version="1.0"?>
<robot name="box">
  <!-- Link for the box -->
  <link name="box_link">
    <!-- Visual properties of the box -->
    <visual>
      <geometry>
        <box size="0.5 0.5 0.5"/> <!-- Specify the size of the box (length, width, height) -->
      </geometry>
      <material name="white">
        <color rgba="1 1 1 1"/> <!-- Color of the box: RGBA -->
      </material>
    </visual>
    <!-- Collision properties of the box, usually same as visual -->
    <collision>
      <geometry>
        <box size="0.5 0.5 0.5"/>
      </geometry>
    </collision>
    <!-- Inertial properties of the box, important for physics simulation -->
    <inertial>
      <mass value="1.0"/> <!-- Mass of the box -->
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/> <!-- Inertia tensor components -->
    </inertial>
  </link>
</robot>
